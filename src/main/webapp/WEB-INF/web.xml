<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0"
	metadata-complete="true">

	<display-name>YYJK</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
    
	<jsp-config>
		<taglib>
			<taglib-uri>/madmin-functions</taglib-uri>
			<taglib-location>/WEB-INF/tld/madmin-functions.tld</taglib-location>
		</taglib>
	</jsp-config>
	<!-- Spring配置文件开始  -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
            classpath*:spring-config.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- Spring配置文件结束 -->
    
	<listener>
		<listener-class>cn.yc.ssh.admin.listener.SysInitListener</listener-class>
	</listener>

	<!-- 可以使用RequestContextHolder.currentRequestAttributes() 获取到请求的attr -->
	<listener>
		<listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
	</listener>

	<!-- 设置servlet编码开始 -->
	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<async-supported>true</async-supported>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
   
	<!-- shiro 安全过滤器 -->
	<filter>
		<filter-name>shiroFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<async-supported>true</async-supported>
		<init-param>
			<param-name>targetFilterLifecycle</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>shiroFilter</filter-name>
		<url-pattern>*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
    
	<!-- 验证码过滤器需要放到Shiro之后 因为Shiro将包装HttpSession 如果不，可能造成两次的sesison id 不一样 -->  
	<filter>  
		<filter-name>JCaptchaFilter</filter-name>  
		<filter-class>   
	    cn.yc.ssh.admin.base.web.jcaptcha.JCaptchaFilter  
		</filter-class>  
	</filter>  
	<filter-mapping>  
		<filter-name>JCaptchaFilter</filter-name>  
		<url-pattern>/jcaptcha.jpg</url-pattern>  
	</filter-mapping>   
	
	<!--CRSF 漏洞过滤-->
	<filter>
		<filter-name>CSRFFilter</filter-name>
		<filter-class>cn.yc.ssh.admin.base.web.interceptor.CsrfFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CSRFFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
    
	<!--XSS 漏洞过滤,sql注入-->
	<filter>
		<filter-name>escapeHttpString</filter-name>
		<filter-class>cn.yc.ssh.admin.base.web.interceptor.EscapeHttpStringFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>escapeHttpString</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
 
	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring-mvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>
	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<!--  设置servlet编码结束 -->
	<error-page>
		<error-code>404</error-code>
		<location>/404error.jsp</location>
	</error-page>
	<error-page>
		<error-code>401</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>402</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>406</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>407</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>408</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>409</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>410</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>411</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>412</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>413</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>414</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>415</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>416</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>417</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>400</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>501</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>502</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>504</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>505</error-code>
		<location>/clientException.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/clientException.jsp</location>
	</error-page>
</web-app>
